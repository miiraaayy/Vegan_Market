@model Vegan_Market.Models.ViewModel
@{
    ViewBag.Title = "Filters";
    Layout = "~/Views/Shared/_Web_Layout.cshtml";
}



<style>

    .input-wrapper {
        position: relative;
    }

        .input-wrapper input[type="text"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            width: 200px;
        }


    .custom-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }
</style>
<aside id="notifications">
    <div class="notifications-container container">
    </div>
</aside>
<div class="container">
    <div data-depth="3" class="breadcrumb-bg center breadcrumb-full" style=" background-color:#f4f1eb;background-image: url(); min-height:65px; ">
        <div class="container">
            <nav data-depth="3" class="breadcrumb hidden-sm-down">
                <ol>
                    <li>
                        <a href="@Url.Action("HomePage", "Home")"><span>Home</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "ViewModelW", new { id = ViewBag.cate_id })"><span>@ViewBag.catename</span></a>
                    </li>
                    <li>
                        <span>@ViewBag.subcatename</span>
                    </li>
                    <li>
                        <span>Fiyat Aralığı</span>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div id="left-column" class="sidebar col-xs-12 col-sm-12 col-md-4 col-lg-3">
            <div class="block-categories block">
                <p class="title_block text-uppercase h6 hidden-sm-down">@ViewBag.subcatename</p>
                <div class="block_content">
                    <ul class="category-top-menu">
                    </ul>
                </div>
            </div>
            <div id="search_filters_wrapper" class="hidden-sm-down">
                <div id="search_filter_controls" class="hidden-md-up">
                    <span id="_mobile_search_filters_clear_all"></span>
                    <button class="btn btn-secondary ok">
                        <i class="material-icons rtl-no-flip">&#xE876;</i>
                        OK
                    </button>
                </div>
                <div id="search_filters">
                    <p class="text-uppercase h6 hidden-sm-down">Filter By</p>


                    <form action="/ViewModelW/All_Filter_sub" method="post">


                        <section class="facet clearfix">
                            <p class="h6 facet-title hidden-sm-down">Availability</p>
                            <div class="title hidden-md-up" data-target="#facet_18373" data-toggle="collapse">
                                <p class="h6 facet-title">Mevcut Olan</p>
                                <span class="navbar-toggler collapse-icons">
                                    <i class="material-icons add">&#xE313;</i>
                                    <i class="material-icons remove">&#xE316;</i>
                                </span>
                            </div>
                            <ul id="facet_18373" class="collapse">
                                <li>
                                    <label class="facet-label">
                                        <span class="custom-checkbox">
                                            <input id="facet_input_18373_1" name="stocks" type="checkbox" value="0">
                                            <span class="ps-shown-by-js"><i class="material-icons rtl-no-flip checkbox-checked">&#xE5CA;</i></span>
                                        </span>
                                        <a href="@Url.Action("Instock", "ViewModelW", new { id = ViewBag.cate_id })" class="category-sub-link" rel="nofollow">
                                            Stoktakiler
                                        </a>
                                    </label>
                                </li>
                                <li>
                                    <label class="facet-label">
                                        <span class="custom-checkbox">
                                            <input id="facet_input_18373_2" name="availability" type="checkbox" value="true">
                                            <span class="ps-shown-by-js"><i class="material-icons rtl-no-flip checkbox-checked">&#xE5CA;</i></span>
                                        </span>
                                        <a href="@Url.Action("Sales", "ViewModelW", new { id = ViewBag.cate_id })" class="category-sub-link" rel="nofollow">
                                            İndirimli Ürünler
                                        </a>
                                    </label>
                                </li>
                            </ul>
                        </section>


                        <input type="submit" value="Uygula" class="custom-button" />


                    </form>
                    <form action="/ViewModelW/Filters" method="post">
                        <input type="hidden" id="sub_id" name="sub_id" value="@ViewBag.sub_id" />
                        <p class="h6 facet-title">Fiyat</p>

                        <div class="input-wrapper">
                            <input type="text" id="min-price" name="minPrice" placeholder="Minimum Fiyat" />
                        </div>
                        <br />
                        <div class="input-wrapper">
                            <input type="text" id="max-price" name="maxPrice" placeholder="Maximum Fiyat" />
                        </div>
                        <br />

                        <input type="submit" value="Filtrele" class="custom-button" />
                    </form>
                </div>
            </div>
        </div>
        <div id="content-wrapper" class="js-content-wrapper left-column col-xs-12 col-sm-12 col-md-8 col-lg-9">
            <section id="main" class="category-1967383214">
                <div id="js-product-list-header">
                    <div class="block-category card card-block">


                        <h1 class="h1">@ViewBag.subcatename</h1>
                        <div class="block-category-inner">
                            <div id="category-description" class="text-muted"><p>@ViewBag.subcatdespt</p></div>
                            <div class="category-cover">
                                <img src="@ViewBag.subpicture" alt="@ViewBag.subcatename" loading="lazy">
                            </div>
                        </div>
                    </div>
                </div>
                <section id="products">
                    <div id="js-product-list-top" class="products-selection">
                        <div class="row">
                            <div class="col-md-6 col-lg-3 hidden-md-down total-products ">
                                <p>Toplam @ViewBag.product_number ürün var.</p>
                            </div>
                            <div class="col-md-6 col-lg-3" id="btn_view_product" data-mode="grid" data-col-xl="3" data-col-lg="3" data-col-md="2" data-col-sm="2" data-col-xs="1" data-col-sp="1">
                                <span class="grid-select grid-select-list view-list" data-col="list"></span>
                                <span class="grid-select grid-select-grid view-1" data-col="12"></span>
                                <span class="grid-select grid-select-grid view-2" data-col="6"></span>
                                <span class="grid-select grid-select-grid view-3 active" data-col="4"></span>
                                <span class="grid-select grid-select-grid view-4" data-col="3"></span>
                                <span class="grid-select grid-select-grid view-5" data-col="2-4"></span>
                            </div>
                            <div class="col-md-6 col-lg-6 grid-selecting">
                                <div class="row sort-by-row">
                                    <span class="col-sm-3 col-md-3 hidden-md-down sort-by">Sort by:</span>
                                    <div class="col-sm-9 col-xs-8 col-md-12 products-sort-order dropdown">
                                        <button class="btn-unstyle select-title" rel="nofollow" data-toggle="dropdown" aria-label="Sort by selection" aria-haspopup="true" aria-expanded="false">
                                            Relevance <i class="material-icons float-xs-right">&#xE5C5;</i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a rel="nofollow" href="4-haircaree563.html?order=product.sales.desc" class="select-list js-search-link">
                                                Best sellers
                                            </a>
                                            <a rel="nofollow" href="4-haircaref917.html?order=product.position.asc" class="select-list current js-search-link">
                                                Relevance
                                            </a>
                                            <a rel="nofollow" href="4-haircarefe2d.html?order=product.name.asc" class="select-list js-search-link">
                                                Name, A to Z
                                            </a>
                                            <a rel="nofollow" href="4-haircare0279.html?order=product.name.desc" class="select-list js-search-link">
                                                Name, Z to A
                                            </a>
                                            <a rel="nofollow" href="4-haircare8eb3.html?order=product.price.asc" class="select-list js-search-link">
                                                Price, low to high
                                            </a>
                                            <a rel="nofollow" href="4-haircare04e6.html?order=product.price.desc" class="select-list js-search-link">
                                                Price, high to low
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-sm-3 col-xs-4 hidden-md-up filter-button">
                                        <button id="search_filter_toggler" class="btn btn-secondary js-search-toggler">
                                            Filter
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 hidden-md-up text-sm-center text-xs-center showing">
                                Showing 1-1 of 1 item(s)
                            </div>
                        </div>
                    </div>
                    <div class="hidden-sm-down">
                        <section id="js-active-search-filters" class="hide">
                            <p class="h6 hidden-xs-up">Active filters</p>
                        </section>
                    </div>
                    <div id="js-product-list">
                        <div class="products">

                            <div class="product_list grid plist-1 ">
                                <div class="row leo-product-ajax">
                                    @foreach (var product in Model.Product)
                                    {


                                        <div class="ajax_block_product col-sp-12 col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-4 first-in-line last-line first-item-of-tablet-line last-item-of-mobile-line last-mobile-line">
                                            <article class="product-miniature js-product-miniature" data-id-product="1" data-id-product-attribute="1">
                                                <div class="thumbnail-container">
                                                    <div class="product-image">
                                                        <a href="@Url.Action("productlist","ViewModelW",new { id=product.product_id})" class="thumbnail product-thumbnail">
                                                            <img class="img-fluid" src="@product.picture_1" alt="">
                                                        </a>
                                                        <ul class="product-flags">
                                                            @if (product.product_discount == true)
                                                            {

                                                                <li class="product-flag discount">-@product.discount_text%</li>

                                                            }
                                                        </ul>
                                                        <div class="functional-buttons clearfix">

                                                            @if (Session["customer"] != null)
                                                            {
                                                                <a href="@Url.Action("Addto_cart", "Shoppingbag", new { product_id = product.product_id })" class="btn btn-primary btn-block" onClick="return GB_showCenter('SEPETİNİZ',this.href,500,800)">ADD TO CART</a>
                                                            }


                                                            else
                                                            {
                                                                <a href="@Url.Action("login_customer", "Home")" class="btn btn-primary btn-block">ADD TO CART</a>
                                                            }
                                                        </div>


                                                        <div class="buttons-top">
                                                            <div class="wishlist">
                                                                @if (Session["customer"] != null)
                                                                {
                                                                    <a href="@Url.Action("Add_wish", "WishList", new { product_id = product.product_id })" title="Add to Wishlist">

                                                                        <span class="leo-wishlist-bt-content">
                                                                            <i class="icon-btn-product icon-wishlist material-icons">&#xE87D;</i>

                                                                            <span class="name-btn-product text-add">Add to Wishlist</span>
                                                                        </span>
                                                                    </a>
                                                                }

                                                                else
                                                                {
                                                                    <a href="@Url.Action("login_customer", "Home")" title="Add to Wishlist">

                                                                        <span class="leo-wishlist-bt-content">
                                                                            <i class="icon-btn-product icon-wishlist material-icons">&#xE87D;</i>

                                                                            <span class="name-btn-product text-add">Add to Wishlist</span>
                                                                        </span>
                                                                    </a>
                                                                }

                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="product-meta">
                                                        <h3 class="h3 product-title"><a href="@Url.Action("productlist","ViewModelW",new { id=product.product_id})">@product.product_name</a></h3>
                                                        <div class="product-price-and-shipping">
                                                            @if (product.product_discount == false)
                                                            {
                                                                <span aria-label="Regular price">@Convert.ToDouble(product.product_price)</span>

                                                            }
                                                            else
                                                            {
                                                                <span class="regular-price" aria-label="Regular price">@Convert.ToDouble(product.product_price)</span>
                                                                int? discount_txt = product.discount_text;

                                                                decimal price = product.product_price - ((product.product_price * discount_txt.Value) / 100);
                                                                product.product_price = price;

                                                                <span class="price" aria-label="Price">
                                                                    @Convert.ToDouble(product.product_price)
                                                                </span>

                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <nav class="pagination" data-total="1">
                            <div id="pagination_summary" class="col-md-4 done">

                            </div>
                            <div class="col-md-6 offset-md-2 pr-0">
                            </div>
                        </nav>
                    </div>
                    <div id="js-product-list-bottom"></div>
                </section>
                <div id="js-product-list-footer">
                </div>
            </section>
        </div>
    </div>
</div>


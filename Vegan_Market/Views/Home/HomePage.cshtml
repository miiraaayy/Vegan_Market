    <script>
        function filterItems() {
            // Seçilen kategori id'lerini toplayın
            var selectedCategories = [];
            $('input[type=checkbox][value]:checked').each(function () {
                selectedCategories.push($(this).val());
            });

            // Tüm öğeleri gizleyin
            $('.item').hide();

            // Seçilen kategorilere ait öğeleri gösterin
            $('.item').each(function () {
                var itemCategories = $(this).data('categories');
                for (var i = 0; i < selectedCategories.length; i++) {
                    if (itemCategories.indexOf(selectedCategories[i]) >= 0) {
                        $(this).show();
                        break;
                    }
                }
            });
        }

        // Checkbox değiştiğinde filtreItems işlevini çağırın
        $('input[type=checkbox]').change(function () {
            filterItems();
        });

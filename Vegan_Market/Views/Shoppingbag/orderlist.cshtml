@model IEnumerable<Vegan_Market.Models.OrderT>

@{
    ViewBag.Title = "orderlist";
    Layout = "~/Views/Shared/_Web_Layout.cshtml";
}



<aside id="notifications">
    <div class="notifications-container container">
    </div>
</aside>
<div class="container">
    <div data-depth="2" class="breadcrumb-bg center breadcrumb-full" style=" background-color:#f4f1eb;background-image: url(); min-height:65px; ">
        <div class="container">
            <nav data-depth="2" class="breadcrumb hidden-sm-down">
                <ol>
                    <li>
                        <a href="@Url.Action("Index","Home")"><span>Home</span></a>
                    </li>
                    <li>
                        <span>Sepet</span>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div id="content-wrapper" class="col-lg-12 col-xs-12 js-content-wrapper">
            <section id="main">
                <header class="page-header">
                    <h1>
                        Sepet
                    </h1>
                    <p>@ViewBag.order_message</p>
                </header>
                <section id="content" class="page-content page-cms page-cms-8">
                    <div class="container container-parent"></div> <div data-elementor-type="post" data-elementor-id="32" class="elementor elementor-32" data-elementor-settings="[]">
                        <div class="elementor-inner">
                            <div class="elementor-section-wrap">
                                <section class="elementor-element elementor-element-e4111b2 elementor-section-boxed elementor-section-height-default elementor-section-height-inner-default elementor-section elementor-top-section" data-id="e4111b2" data-element_type="section">
                                    <div class="elementor-container elementor-column-gap-no">
                                        <div class="elementor-row">

                                            <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_products_table">
                                                <thead>
                                                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                                        <th class="w-10px pe-2">
                                                            Sipariş Numarası
                                                        </th>

                                                        <th class="min-w-200px">Sipariş Tarihi</th>
                                                        <th class="text-end min-w-100px">Fiyat</th>
                                                        <th class="text-end min-w-70px"></th>

                                                        <th class="text-end min-w-100px"></th>
                                                        <th class="text-end min-w-100px">Sipariş Adet</th>
                                                        <th class="text-end min-w-100px"></th>

                                                        <th class="text-end min-w-70px">Alınan Ürün</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var orders in Model)
                                                {


                                                    <tbody class="fw-semibold text-gray-600">
                                                        <tr>
                                                            <td>
                                                              @orders.order_num
                                                            </td>
                                                            <td>
                                                                @orders.order_date.ToShortDateString()
                                                              
                                                            </td>
                                                            <td>
                                                                @orders.price
                                                            </td>
                                                            <td class="text-end pe-0" data-order="25">
                                                         
                                                            </td>
                                                            <td class="text-end pe-0">
                                                               
                                                            </td>
                                                            <td class="text-end pe-0">
                                                                @orders.product_number
                                                            </td>
                                                            <td class="text-end pe-0">
                                                               
                                                            </td>
                                                            <td class="text-end pe-0">

                                                                @orders.Product.product_name
                                                            </td>


                                                        </tr>





                                                    </tbody>
                                                }

                                                                                



                                            </table>

                                        </div>
                                    </div>
                                </section>


                            </div>
                        </div>
                    </div>
                </section>
                <footer class="page-footer">
                </footer>
            </section>
        </div>
    </div>
</div>




























<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.order_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.customer_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.product_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order_num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.customer_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.product_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.order_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.order_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.order_id })
            </td>
        </tr>
    }

</table>
